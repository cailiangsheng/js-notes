{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Test",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"--require",
				"babel-register",
				"--require",
				"babel-polyfill",
				"${file}"
			],
			"env": {
				"BABEL_ENV": "test"
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"cwd": "${workspaceFolder}/src"
		}
	]
}